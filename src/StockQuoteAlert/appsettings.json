{
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
      "MinimumLevel": "Information",
      "WriteTo": [
        { "Name": "Console" },
        { 
          "Name": "File", 
          "Args": { 
            "path": "logs/stock-alert-.log", 
            "rollingInterval": "Day" 
          } 
        }
      ]
    },
    "EmailSettings": {
      "SenderEmail": "test@mock.com",
      "SmtpServer": "smtp.mock.com",
      "SmtpPort": 25,
      "SmtpUser": "mock_user",
      "SmtpPass": "mock_pass",
      "RecipientEmail": "test_destination@mock.com",
      "AlertCooldownSeconds": 300,
      "IsAlertCooldownEnabled": true
   },
   "MonitoringSettings": {
      "CheckIntervalSeconds": 1,
      "ApiBaseUrl": "https://brapi.dev/" 
    }
  }